{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Development Server",
      "type": "node",
      "request": "attach",
      "preLaunchTask": "dev-server-start",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch App in Browser",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "dev-server-start",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },
    {
      "name": "Debug with Chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "dev-server-validate",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },
    {
      "name": "Run Tests",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "lint: check",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
