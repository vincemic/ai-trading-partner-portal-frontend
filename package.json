{
  "name": "portal-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed --reporter=list",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:login": "playwright test tests/login*.spec.ts --reporter=list",
    "test:e2e:matrix": "playwright test tests/login-matrix.spec.ts --reporter=list",
    "test:e2e:smoke": "playwright test tests/login-matrix.spec.ts --grep=\"smoke test\" --reporter=list",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "dev:validate": "curl -f -s http://localhost:4200 > nul 2>&1 || echo Server not running",
    "dev:stop": "powershell -Command \"Get-Process -Name node -ErrorAction SilentlyContinue | Where-Object { $_.ProcessName -eq 'node' } | Stop-Process -Force\"",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.1",
    "@angular/cdk": "^20.2.4",
    "@angular/common": "^20.3.1",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.1",
    "@angular/material": "^20.2.4",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "echarts": "^6.0.0",
    "ngx-echarts": "^20.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.2",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.55.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  }
}
